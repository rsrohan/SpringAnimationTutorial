<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <corners android:radius="20dp"/>
            <gradient android:startColor="@color/red_6"
                android:endColor="@color/red_9"
                android:angle="-90"/>
            <size
                android:height="100dp"
                android:width="100dp"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="20dp"/>
            <gradient android:startColor="@color/red_3"
                android:endColor="@color/red_6"
                android:angle="90"/>
            <size
                android:height="100dp"
                android:width="100dp"/>
        </shape>
    </item>

</selector>